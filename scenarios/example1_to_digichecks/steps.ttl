@prefix state: <http://localhost:8000/states#>.
@prefix shape: <http://localhost:8000/shapes#>.
@prefix step: <http://localhost:8000/steps#>.

step:prepareBuildingPermitApplication  a o-steps:JourneyLevelStep, o-steps:ContainerLevelStep ;
  o-steps:hasDescription [ xl:literalForm "Documents to add to a building permit request"@en ];
  o-steps:producesState state:documentsForBuildingPermitApplicationAvailable ,
                        state:buildingDesignAvailableState ;
  o-steps:requiresState o-steps:emptyState .

step:buildingPermitApplicationReady  a o-steps:JourneyLevelStep, o-steps:ContainerLevelStep ;
  o-steps:hasDescription [ xl:literalForm "Building permit application ready"@en ];
  o-steps:requiresState state:documentsForBuildingPermitApplicationAvailable ,
                        state:buildingDesignAvailableState ;
  o-steps:producesState state:buildingPermitApplicationReady .

step:prepareDocumentsForBuildingPermitApplication a o-steps:ComponentLevelStep ;
  rdfs:label "Documents for building permit application available"@en ;
  o-steps:hasDescription [ xl:literalForm "Documents for building permit application available"@en ];
  o-steps:requiresState o-steps:emptyState ;
  o-steps:producesState state:documentsForBuildingPermitApplicationAvailable .

step:prepareDesign a o-steps:ComponentLevelStep ;
  rdfs:label "Building design available"@en ;
  o-steps:hasDescription [ xl:literalForm "Building design available"@en ];
  o-steps:requiresState o-steps:emptyState ;
  o-steps:producesState state:buildingDesignAvailableState .

