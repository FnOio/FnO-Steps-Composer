# https://www.ibz.rrn.fgov.be/nl/identiteitsdocumenten/eid/aanvraag-pincode/

@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix o-address: <https://data.vlaanderen.be/ns/adres#> .
@prefix o-steps: <https://fast.ilabt.imec.be/ns/oslo-steps/0.2#> .
@prefix o-persoon: <https://data.vlaanderen.be/ns/persoon#> .
@prefix ex: <http://example.org/ns/example#> .
@prefix xl: <http://www.w3.org/2008/05/skos-xl#> .
@prefix locn: <http://www.w3.org/ns/locn#> .
@prefix sh:      <http://www.w3.org/ns/shacl#> .
@prefix schema: <https://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

@prefix state: <http://localhost:8000/states#>.
@prefix shape: <http://localhost:8000/shapes#>.
@prefix step: <http://localhost:8000/steps#>.

shape:documentsForBuildingPermitApplicationAvailableShape a o-steps:StateShape ;
  rdfs:label "Documents for building permit application available"@en ;
  rdfs:comment "User with documents for building permit application available"@en ;
  sh:targetClass o-persoon:Inwoner ;
  sh:property shape:documentsForBuildingPermitApplicationAvailablePropertyShape .

shape:documentsForBuildingPermitApplicationAvailablePropertyShape
  a sh:PropertyShape ;
  rdfs:label "Check on required documents for building permit application property."@en ;
  # TODO: split up into different required documents (for use case)
  a sh:PropertyShape ;
  sh:path ex:hasDocumentsForBuildingPermitApplication ; # TODO: de-exemplify
  sh:dataType xsd:boolean ; # TODO: replace boolean with e.g. actual document types
  sh:minCount 1 ;
  sh:maxCount 1 .

shape:buildingDesignAvailableShape a o-steps:StateShape ;
  rdfs:label "Building design available"@en ;
  rdfs:comment "User with a building design at hand."@en ;
  sh:targetClass o-persoon:Inwoner ;
  sh:property shape:buildingDesignAvailablePropertyShape .

shape:buildingDesignAvailablePropertyShape
  a sh:PropertyShape ;
  rdfs:label "Check on design available property."@en ;
  a sh:PropertyShape ;
  sh:path ex:hasDesign ; # TODO: de-exemplify
  sh:dataType xsd:boolean ; # TODO: replace boolean with e.g. actual design type
  sh:minCount 1 ;
  sh:maxCount 1 .

shape:buildingPermitApplicationReadyShape
  a o-steps:StateShape ;
  rdfs:label "Building permit application ready"@en ;
  sh:targetClass o-persoon:Inwoner ;
  sh:property shape:buildingPermitApplicationReadyPropertyShape .

shape:buildingPermitApplicationReadyPropertyShape a sh:PropertyShape ;
  rdfs:label "Building permit application ready"@en ;
  sh:path ex:buildingPermitApplicationReady ;
  sh:dataType xsd:boolean ;
  sh:hasValue true ;
  sh:minCount 1;
  sh:maxCount 1 .
