{

?Action  o-steps:requiresState o-steps:emptyState. 

("!") e:derive true.
?Path_s :independentTail ( () ?tail).
(?sub ?tail) list:append ?Path_s.


(?tail (?Action)) list:append ?tail2.

?sub :store ?tail2.
}.




